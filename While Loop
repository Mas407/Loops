Program 16


int next,a=1,b=1;
int count=2;
cout<<a<<"\t"<<b<<"\t";
while(count<=10){
    next=a+b;
    cout<<next<<"\t";
    count++;
    a=b;
    b=next;
}


Program 17

int n;
int a,b,next;
cout<<"Enter the number ::> ";
cin>>n;
if(n==0 || n==1)
cout<<n<<" is the fibbonic number ";
else{
    a=0; b=1; next=a+b;
    while(next<n){
        a=b;
        b=next;
        next=a+b;
    }
    if(next==n)
    cout<<n<<" is the fibbonic number ";
    else
    cout<<"Not a fibbonic number ";
}

