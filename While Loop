Program 12


int n,sum=0,sum1=0;
int count=0;

cout<<"Enter a positive number ::> ";
cin>>n;
int max=n;
int min=n;
while (n>0)
{
sum+=n;
count++;
if(n>max)
max=n;
else if (n<min)
min=n;
cout<<"Enter a positive number ::> ";
cin>>n;
}
if(count==0){
    cout<<"No positive number entered ::> "<<endl;
}
else{
    cout<<"Enter number is = "<<count<<endl;
    cout<<"Maximum number is ="<<max<<endl;
    cout<<"Minimum number is ="<<min<<endl;
}



Program 13


int cword=1;
int ccharacters=0;//c=count
char ch;
cout<<"Enter the sentence ::> ";
while(true){
    ch=cin.get();
    if(ch=='\n')
    break;
 if(ch==' ')
        cword++;
        else
        ccharacters++;
}
cout<<"\t"<<" Count words are ::> "<<cword<<endl;
cout<<"\t"<<" Count characters are ::> "<<ccharacters;




