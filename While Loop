cin>>n;
while(n>=0){
    if(n%2==0)
    sum+=n;
    else
    sum1+=n;
    n--;
}
cout<<"Sum of Even number is ::> "<<sum<<endl<<"Sum of odd numbers ::> "<<sum1;


