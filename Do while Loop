Program 3

int a,b;
char op;

do{
    cout<<"Enter two numbers ::> ";
    cin>>a>>b;
    cout<<"Product of the number is ::> "<<a*b<<endl<<endl;
    cout<<"Do you want to continue ::> (y / n)";
    cin>>op;
}
while(op!='n');



Program 4

int n,s=0,digit;
cout<<"Enter the number ";
cin>>n;
int c=n;
do{
    digit=n%10;
    s=s*10+digit;
    n=n/10;
}while(n!=0);
if(s==c)
cout<<"Number is palindrome ";
else
cout<<"Not a palidrome ";



