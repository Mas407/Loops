Program 6
  
::> Euclidean Algorithm

int a,b;
cout<<"Enter the number ";
cin>>a>>b;
do{
    int temp=b;
    b=a%b;
    a=temp;
}
while(b!=0);
cout<<"GCD = "<<a<<endl;




return 0;
}
