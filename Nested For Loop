Program 5

for(int i=4; i>=1; i--){
 
    for(int j=1; j<=i; j++){
        cout<<i<<" ";
    }
    cout<<endl;

}




 Program     6 


for(int i=5; i>=1; i-- ){
    for(int j=1; j<=5-i; j++)
        cout<<" ";
        for(int k=1; k<=i; k++)
        cout<<"*";
    cout<<endl;
}


