Program   8


int n=2;
for(int i=2; i<=6; i++){
    for(int j=1; j<i; j++){
cout<<i*j<<"  ";
    }cout<<endl;
n++;
}


Program   9  (Out of Book )

for(int i=1; i<=6; i++){
    for(int j=i; j>1; j--)
        cout<<" ";
        for(int k=1; k<=6+1-i; k++)
            cout<<k<<" ";
    cout<<endl;
}

Program   10

for(int i=1; i<=5; i++){
    for(int k=1; k<=5-i; k++)
    cout<<" ";
    for(int j=1; j<=i; j++)
        cout<<"*";
    cout<<endl;
}


Program 11


int n=1;
for(int i=1; i<=5; i++){
    for(int j=1; j<=5-i; j++)
    cout<<" ";
    for(int k=1; k<=i; k++)
        cout<<n<<" ";
        cout<<endl;
        n++;
}


return 0;
}
